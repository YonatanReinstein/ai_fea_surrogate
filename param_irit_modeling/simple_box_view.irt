include("dims.irt");

save_mat = view_mat;
view_mat = save_mat * scale( vector( 0.15, 0.15, 0.15 ) );

TV = GBOX(
    point(Length,0,0), point(Length,0,Height),
    point(Length,Width,0), point(Length,Width,Height),
    point(0,0,0), point(0,0,Height),
    point(0,Width,0), point(0,Width,Height)
);
interact( list( view_mat, TV ) );
#save( "simple_box.inp", list(TV));
view_mat = save_mat;
free(TV);
free( save_mat );
exit();
